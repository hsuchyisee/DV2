{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "data/average-expenditures-of-tourists-abroad.csv"
    },
    "vconcat": [
      {
        "width": "container",
        "height": 500,
        "title": "International Tourist Expenditures by Country",
        "projection": {"type": "equalEarth",  "rotate": [0, 0, 0], "center": [0,0]},
        "layer": [
          {
            "data": {"sphere": true},
            "mark": {"type": "geoshape", "fill": "#a6cee3", "stroke": null}
          },
          {
            "data": {
              "url": "topojson/WorldMapGraticulesOcean.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },
          {
            "data": {
              "url": "topojson/WorldMapGraticulesOcean.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "#777", "strokeWidth": 0.5}
          },
          {
            "data": {
              "url": "topojson/WorldMapGraticulesOcean.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
              {
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
              }
            ],
            "mark": {"type": "geoshape", "fill": "#ddd", "stroke": "white", "strokeWidth": 0.5},
            "encoding": {
              "tooltip": {"field": "note", "type": "nominal"}
            }
          },
          {
            "data": {"url": "data/average-expenditures-of-tourists-abroad.csv"},
            "transform": [
              {"filter": {"param": "time_brush"}},
              {
                "aggregate": [
                  {
                    "op": "sum",
                    "field": "International expenditure on travel abroad (adjusted for inflation)",
                    "as": "expenditure_sum"
                  }
                ],
                "groupby": ["Code", "Entity"]
              },
              {
                "lookup": "Code",
                "from": {
                  "data": {
                    "url": "topojson/WorldMapGraticulesOcean.topojson",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                  },
                  "key": "properties.ISO_A3"
                },
                "as": "geo"
              }
            ],
            "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "color": {
                "field": "expenditure_sum",
                "type": "quantitative",
                "title": "Average Expenditure (USD)",
                "scale": {
                  "type": "log",
                  "scheme": "blues",
                  "domain": [1000000, 100000000000]
                },
                "legend": {
                  "format": ".2s",
                  "orient": "top-left",
                  "direction": "vertical",
                  "titleAlign": "left",
                  "titleAnchor": "start",
                  "titleFontSize": 12,
                  "titleFontWeight": "bold",
                  "labelFontSize": 10,
                  "symbolSize": 100,
                  "symbolStrokeWidth": 0,
                  "gradientLength": 150,
                  "gradientThickness": 15

                }
              },
              "tooltip": [
                {"field": "Entity", "type": "nominal", "title": "Country"},
                {"field": "expenditure_sum", "type": "quantitative", "title": "Expenditure (USD)", "format": ",.0f"}
              ]
            }
          }
        ]
      },
      {
        "width": "container",
        "height": 60,
        "title": "Overview - Brush to filter time period",
        "params": [
          {
            "name": "time_brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "mark": {"type": "line", "point": false, "strokeWidth": 2},
        "encoding": {
          "x": {
            "field": "Year",
            "type": "temporal",
            "axis": {"title": "", "format": "%Y"}
          },
          "y": {
            "aggregate": "sum",
            "field": "International expenditure on travel abroad (adjusted for inflation)",
            "axis": {"tickCount": 3, "grid": false},
            "title": "Global Total Expenditure"
          },
          "color": {"value": "#666"}
        }
      },
      {
        "width": "container",
        "height": 300,
        "title": "Tourist Expenditures by Country - Detailed View",
        "transform": [
          {"filter": {"param": "time_brush"}},
          {
            "filter": {
              "field": "Entity",
              "oneOf": ["United States", "Malaysia", "Australia", "China", "Russia", "United Kingdom"]
            }
          }
        ],
        "mark": {"type": "area", "interpolate": "monotone"},
        "encoding": {
          "x": {
            "field": "Year",
            "type": "temporal",
            "axis": {"title": "Year", "format": "%Y"}
          },
          "y": {
            "field": "International expenditure on travel abroad (adjusted for inflation)",
            "type": "quantitative",
            "title": "Expenditure (USD)",
            "axis": {"format": ".2s"}
          },
          "color": {
            "field": "Entity",
            "type": "nominal",
            "title": "Country",
            "scale": {
              "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd", "#8c564b"]
            }
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal", "title": "Country"},
            {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
            {"field": "International expenditure on travel abroad (adjusted for inflation)", "type": "quantitative", "title": "Expenditure (USD)", "format": ",.0f"}
          ]
        }
      }
      
    ],
    "config": {
      "title": {"font": "sans-serif", "fontSize": 14},
      "axis": {"labelFont": "sans-serif", "titleFont": "sans-serif"},
      "legend": {"labelFont": "sans-serif", "titleFont": "sans-serif"},
      "view": {"stroke": null}
    }
  }