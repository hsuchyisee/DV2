{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/accoms.csv", "format": {"type": "csv"}},
  "transform": [
    {"calculate": "toNumber(replace(datum.Percent, '%',''))", "as": "value"},
    {
      "calculate": "datum.Category === 'Hostel' || datum.Category === 'Other' || datum.Category === 'I\\'ve never been on a holiday' ? 'Other' : datum.Category",
      "as": "CombinedCategory"
    },
    {
      "aggregate": [{"op": "sum", "field": "value", "as": "total_value"}],
      "groupby": ["CombinedCategory"]
    },
    {"calculate": "datum.CombinedCategory", "as": "Category"},
    {"calculate": "datum.total_value", "as": "value"}
  ],
  "facet": {"field": "Category", "type": "nominal", "header": {"title": "", "labelLimit": 0}},
  "columns": 3,
  "spec": {
    "width": 120,
    "height": 120,
    "transform": [
      {"calculate": "sequence(1,101)", "as": "Sequence"},
      {"flatten": ["Sequence"]},
      {"calculate": "datum.Sequence <= datum.value ? 'Share' : 'Remaining'", "as": "Plot"},
      {"calculate": "ceil(datum.Sequence / 10)", "as": "row"},
      {"calculate": "(datum.Sequence - 1) % 10", "as": "col"}
    ],
    "layer": [
      {
        "mark": {"type": "rect", "stroke": "#fff", "strokeWidth": 1, "tooltip": true},
        "encoding": {
          "x": {"field": "col", "type": "ordinal", "axis": null},
          "y": {"field": "row", "type": "ordinal", "axis": null, "sort": "-y"},
          "color": {
            "condition": {
              "test": "datum.Plot === 'Share'",
              "field": "Category",
              "type": "nominal",
              "scale": {"scheme": "category10"}
            },
            "value": "#E5E7E9"
          },
          "tooltip": [
            {"field": "Category", "type": "nominal"},
            {"field": "value", "type": "quantitative", "title": "Percent", "format": ".1f"}
          ]
        }
      },
      {
        "mark": {"type": "text", "fontSize": 12, "fontWeight": "bold"},
        "encoding": {
          "x": {"aggregate": "min", "field": "col", "type": "ordinal", "axis": null},
          "y": {"value": -6},
          "text": {
            "condition": {
              "test": "datum.Sequence == 1",
              "value": {"expr": "format(datum.value, '.1f') + '%'"}
            }
          }
        }
      }
    ]
  },
  "config": {"view": {"stroke": null}, "background": "#fff"}
}